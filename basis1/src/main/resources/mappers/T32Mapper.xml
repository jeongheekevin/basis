<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="org.spring.sample.T32Mapper">


	<!-- mybatis-config.xml의 typeAlias에 등록해두지 않았다면 
	<select id="selectMember" resultType="com.example.dto.MemberVO" > 
	SELECT ID, PW ,NAME FROM TEST
	</select> 이렇게 해야 한다. -->

	<resultMap type="licenseInfoVO" id="rsLicenseInfo">
		<result property="serial" column="SerialNumber"/>
		<result property="type" column="LicenseType"/>
		<result property="name" column="LicenseName"/>
	</resultMap>


	<select id="selectMember" resultType="memberVO">
		SELECT ID, PW ,userName FROM TEST order by CAST(RIGHT(ID,LEN(ID)-2) AS INT) 
	</select>
	
	<select id="lisenseInfoList" resultType="licenseInfoVO">
		SELECT * FROM LicenseInfo
	</select>
	
	<insert id="insertLicenseInfo" parameterType="licenseInfoVO" useGeneratedKeys="true" keyProperty="">
		INSERT into LicenseInfo (SerialNumber, LicenseType, LicenseName) Values (#{serialNumber}, #{licenseType}, #{licenseName})
	</insert>
	
	<insert id="serialtest" parameterType="licenseInfoVO" useGeneratedKeys="true" keyProperty="">
		INSERT into LicenseInfo (SerialNumber) Values (#{serial})
	</insert>
	
	
	<update id="updateLicenseInfo" parameterType="licenseInfoVO">
			UPDATE LicenseInfo
			SET 
				LicenseType = #{type}
				LicenseName = #{name}
			WHERE SerialNumber = #{serial}
			
	</update>
	
	<delete id="deleteLicenseInfo" parameterType="licenseInfoVO">
		DELETE FROM LicenseInfo WHERE SerialNumber = #{serial}
	</delete>
	
</mapper>

